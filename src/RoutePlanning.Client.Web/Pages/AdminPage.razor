@page "/adminpage"

<PageTitle>Admin Page</PageTitle>

<h1>Admin Panel</h1>
<hr/>

    <div class="row">
        &nbsp;&nbsp;
        <button style="width: 100px;" class="btn btn-primary mb-5">Back</button> &nbsp;&nbsp;&nbsp;&nbsp;
        <button style="width: 200px;" class="btn btn-primary mb-5">
            <div class="oi oi-plus" aria-hidden="true"></div>Add</button> &nbsp;&nbsp;&nbsp;&nbsp;
        <button style="width: 200px; background-color: red !important; border-color: red !important;" class="btn btn-primary mb-5">
            <div class="oi oi-trash" aria-hidden="true"></div>Remove</button> &nbsp;&nbsp;&nbsp;&nbsp;
        <select style="width: 260px; border-color: #15194f; height: 37px; border-radius: 5px 5px 5px 5px" name="admin-options" id="admin-options">
            <option value="prices">Prices</option>
            <option value="harbors">Harbors</option>
            <option value="orders">Orders</option>
        </select>
    </div>

    <style>
        table,
        th,
        td {
            border: 1px solid black;
            border-collapse: collapse;
        }
        th,
        td {
            padding: 10px;
        }
        th {
            text-align: center;
        }
    </style>


<table id="priceTable" style="text-align:center; width:100%;" class="admin-divs">
    <tr style="background-color: #15194f; color: white; text-align: center">
        <th>Price ID</th>
        <th>Valid From</th>
        <th>Valid To</th>
        <th>Range From</th>
        <th>Range To</th>
        <th>Cost</th>
    </tr>
