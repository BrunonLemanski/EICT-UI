        <td>1</td>
        <td>November</td>
        <td>April</td>
        <td>0</td>
        <td>10</td>
        <td>$8</td>
    </tr>
    <tr>
        <td>2</td>
        <td>November</td>
        <td>April</td>
        <td>10</td>
        <td>50</td>
        <td>$8</td>
    </tr>
</table>

<table id="orderLog" style="text-align:center; width:100%; margin-top: 20px">
    <tr style="background-color: #15194f; color: white; text-align: center">
        <th>Order ID</th>
        <th>Transported From</th>
        <th>Transported To</th>
        <th>Time Estimate</th>
        <th>Cost</th>
        <th>Status</th>
    </tr>
