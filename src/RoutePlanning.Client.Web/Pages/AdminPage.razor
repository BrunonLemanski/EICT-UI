        <td>001</td>
        <td>Harbor 1</td>
        <td>Harbor 2</td>
        <td>10 hours</td>
        <td>$10</td>
        <td>Delivered</td>
    </tr>
    <tr>
        <td>002</td>
        <td>Harbor 3</td>
        <td>Harbor 7</td>
        <td>40 hours</td>
        <td>$100</td>
        <td>Ongoing</td>
    </tr>
</table>

<table id="harborsOverview" style="text-align:center; width:inherit; margin-top: 20px; margin-bottom: 20px">
    <tr style="background-color: #15194f; color: white; text-align: center">
        <th>Harbor</th>
        <th>Discount</th>
        <th>Status</th>
        <th>Update status</th>
    </tr>
    <tr>
        <td>Harbor 1</td>
        <td>0.10%</td>
        <td>Active</td>
        <td><div class="row"><button style="width: 100px; align-content: center; margin-left:20px; margin-right:20px" class="btn btn-primary">Disable</button></div></td>
    </tr>
    <tr>
        <td>Harbor 2</td>
        <td>0%</td>
        <td>Disable</td>
        <td><div class="row"><button style="width: 100px; align-content: center; margin-left:20px; margin-right:20px;" class="btn btn-primary">Activate</button></div></td>
    </tr>
</table>


